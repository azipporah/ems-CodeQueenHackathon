<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="row">
      <div class="col-md-6">
        <form action="/caseReport" method="POST">
          <div >
            <div class="mb-3">
              <label for="p_name" class="form-label">Person's name</label>
              <input type="text" class="form-control" id="p_name" name="personName" />
            </div>
            <div class="mb-3">
              <label for="p_age" class="form-label">Age</label>
              <input type="text" class="form-control" id="p_age" name="age" />
            </div>
            <div class="mb-3">
              <label for="pcontact" class="form-label">Person's contact</label>
              <input
                type="number"
                class="form-control"
                id="pcontact"
                name="personContact"
              />
            </div>
            <div class="mb-3">
              <label for="rdistrict" class="form-label">District</label>
              <input
                type="text"
                class="form-control"
                id="rdistrict"
                name="district"
              />
            </div>
            <div class="mb-3">
              <label for="rcontact" class="form-label">Reporter's contact</label>
              <input
                type="number"
                class="form-control"
                id="rcontact"
                name="reporterContact"
                placeholder="phone number of the person reporting"
              />
            </div>
            <div class="mb-3">
              <label for="rdesc" class="form-label">Description</label>
              <input type="text" class="form-control" id="rdesc" name="description" />
            </div>
            <div class="mb-3">
              <label for="dor" class="form-label">Date of report</label>
              <input type="date" class="form-control" id="dor" name="dateOfReport" />
            </div>
          </div>

          <button type="submit" class="btn btn-primary" id="report">
            Submit
          </button>
        </form>

        <!-- <p>Already have an account!<a href="/login">Login here</a></p> -->
      </div>

      <h1>ALL REPORTED CASES</h1>
      <div class="col-md-5" style="margin-top: 100px; margin-left: 50px">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th scope="col">Person's name</th>
              <th scope="col">Age</th>
              <th scope="col">Person's contact</th>
              <th scope="col">District</th>
              <th scope="col">Reporter's contact</th>
              <th scope="col">Description</th>
              <th scope="col">Date of report</th>
            </tr>
          </thead>
          <tbody id="tableBody"></tbody>
        </table>
        <!-- <a href="http://127.0.0.1:5500/src/todo.html">Back to input</a> -->
      </div>
    </div>
    <script src="./js/reportedCases.js"></script>
  </body>
</html>
